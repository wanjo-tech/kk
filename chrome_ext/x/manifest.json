{
  "manifest_version": 3,
  "name": "Hide Username",
  "version": "1.0",
  "description": "Hide your username on the web page.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*","*://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

